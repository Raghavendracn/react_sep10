{
  "name": "React TypeScript Project",
  "description": "Complete setup for React TypeScript projects with MUI support",
  "files": {
    ".eslintrc.json": {
      "source": "../eslint/typescript.json",
      "merge": ["../eslint/import-rules.json"]
    },
    ".prettierrc.json": {
      "source": "../prettier/react.json"
    },
    "tsconfig.json": {
      "source": "../typescript/react.json"
    },
    ".vscode/settings.json": {
      "merge": ["../vscode/base-settings.json", "../vscode/react-settings.json"]
    },
    ".vscode/extensions.json": {
      "source": "../vscode/extensions.json"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "devDependencies": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint-config-prettier",
      "eslint-plugin-import",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "prettier"
    ]
  }
}
